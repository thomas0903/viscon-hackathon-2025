# Backend
# SQLite database (default for local dev)
# DATABASE_URL=sqlite+aiosqlite:///var/data/app.db

# Enable mock auth for local dev (no proxy headers needed)
USE_MOCK_AUTHENTICATION=true

# Optional: expose DB debug routes (local only)
ENABLE_DB_DEBUG_ROUTES=false

# Seed data and scrape event data on startup (docker-compose)
AUTO_SEED=false
AUTO_SCRAPE_EVENTS=false

# Uploads
MAX_UPLOAD_SIZE_MIB=10

# Frontend (Vite)
# If empty, requests go to same-origin via Vite proxy/dev server
VITE_API_BASE_URL=

# Scraper utilities (optional)
# SCRAPER_OUT_DIR=
# SCRAPER_DELAY_SEC=0.1

